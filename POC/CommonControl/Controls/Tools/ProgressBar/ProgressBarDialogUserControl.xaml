<UserControl x:Class="POC.ProgressBarDialogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <Grid Background="#E5EEF5" Width="150" Height="100" >
        <StackPanel Margin="15" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="lbl" Text="LOADING..."
                       Foreground="#005D9A"
                       FontSize="14"></TextBlock>
            <ProgressBar Orientation="Horizontal"
                         Background="#E5EEF5"
                         Height="20"
                         x:Name="pb"
                         materialDesign:TransitionAssist.DisableTransitions="True" />
            <TextBlock FontSize="14" Foreground="Black" 
                       x:Name="lblPercentage"
                       HorizontalAlignment="Center"
                      ></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
