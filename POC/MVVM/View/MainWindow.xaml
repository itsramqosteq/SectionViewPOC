                    </Trigger>
                </Style.Triggers>


            </Style>-->
            
        </ResourceDictionary>
       
        <!--// Tooltip Style Template //-->
        <!--// App Close Button Style Template //-->
    </Window.Resources>
    
    <DockPanel x:Name="RootWindow"
               Background="#E5EEF5"><!--E5EEF5-->

        <!--HEADER-->
        <DockPanel x:Name="TitleBar"
                   DockPanel.Dock="Top">
            <uc:HeaderPanelUserControl Tittle="POC Environment" x:Name="HeaderPanel"
                                       Logo="/POC;component/Resources/32x32.png"
                                       DocumentPath="POC.mhtml"></uc:HeaderPanelUserControl>
        </DockPanel>

        <materialDesign:DialogHost x:Name="rootDialogHost"
                                   Identifier="POCRootDialog"
                                   DialogTheme="Inherit">
            <Border BorderThickness="1 0 1 0"
                    BorderBrush="#f2f2f2">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <!--MAIN CONTENT-->
               
                    <Grid x:Name="Container"
                          Grid.Row="0"
                          Margin="16">
                   
                           
                    <!--<local:POCUserControl></local:POCUserControl>-->
                       
            </Grid>
              
                <Grid   VerticalAlignment="Bottom"
                    >
                    <materialDesign:Snackbar  HorizontalAlignment="Stretch"
                                             x:Name="SnackbarSeven"
                                             MessageQueue="{materialDesign:MessageQueue}">
                          

                    </materialDesign:Snackbar>
                    
                </Grid>
                <!--FOOTER-->
              <uc:FooterPanelUserControl Grid.Row="1"></uc:FooterPanelUserControl>
            </Grid>
                </Border>
        </materialDesign:DialogHost>
    </DockPanel>
  

</Window>
